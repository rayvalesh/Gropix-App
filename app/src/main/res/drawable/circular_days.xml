<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="@dimen/dimen_view_height" android:color="@color/colorPrimary" />
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/colorWhite" />
                    <stroke android:width="@dimen/dimen_view_height" android:color="@color/colorViewBlack" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
