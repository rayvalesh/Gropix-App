<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_button_radius" />
            <solid android:color="@color/colorButtonBackgroundDark" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_button_radius" />
            <solid android:color="@color/colorButtonDisable" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_button_radius" />
            <stroke android:color="@color/colorButtonBackground"
                android:width="@dimen/dimen_view_height"/>
        </shape>
    </item>
</selector>