<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/id_parent_selected"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_button_height_medium_small"
        android:layout_marginStart="@dimen/dimen_common_margin_medium"
        android:layout_marginTop="@dimen/dimen_common_margin"
        android:layout_marginBottom="@dimen/dimen_common_margin_medium"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/id_button_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorLayoutBackground"
            android:clickable="true"
            android:contentDescription="@string/string_button_name_sub"
            android:focusable="true"
            android:padding="@dimen/dimen_common_margin_small"
            android:tint="@color/colorTextPrimary"
            app:srcCompat="@drawable/icon_vd_subtract" />

        <TextView
            android:id="@+id/id_text_selected_items"
            style="@style/TextViewStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorStyleThreeDark"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_common_margin_more"
            android:paddingRight="@dimen/dimen_common_margin_more"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimen_common_text_size_title" />

        <ImageButton
            android:id="@+id/id_button_add_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorLayoutBackground"
            android:clickable="true"
            android:contentDescription="@string/string_button_name_add"
            android:focusable="true"
            android:padding="@dimen/dimen_common_margin_medium"
            android:tint="@color/colorTextPrimary"
            app:srcCompat="@drawable/icon_vd_add" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_button_add"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_button_height_medium_small"
        android:layout_marginStart="@dimen/dimen_common_margin_small"
        android:layout_marginTop="@dimen/dimen_common_margin"
        android:layout_marginBottom="@dimen/dimen_common_margin_small"
        android:background="@drawable/button_background_rect_green"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_margin_balancing"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_common_margin"
            android:paddingRight="@dimen/dimen_common_margin"
            android:text="@string/string_button_name_add"
            android:textColor="@color/colorStyleThreeDark"
            android:textSize="@dimen/dimen_common_text_size_med" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dimen_icon_size_very_small"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_common_margin_medium"
            android:layout_marginTop="@dimen/dimen_margin_balancing"
            android:layout_marginRight="@dimen/dimen_common_margin_medium"
            android:layout_marginBottom="@dimen/dimen_margin_balancing"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/icon_vd_add" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/id_button_remove"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_button_height_medium_small"
        android:layout_marginStart="@dimen/dimen_common_margin"
        android:layout_marginTop="@dimen/dimen_common_margin"
        android:background="@drawable/button_background_positive"
        android:padding="@dimen/dimen_common_margin_small"
        android:tint="@color/colorWhite"
        android:visibility="gone"
        app:srcCompat="@drawable/icon_vd_delete" />
</LinearLayout>