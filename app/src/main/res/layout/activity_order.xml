<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLayoutBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.CartActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/id_parent_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="@dimen/dimen_app_bar_elevation_zero">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/id_collapsing_bar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:collapsedTitleTextAppearance="@style/AppBarTextViewStyleWhite"
            app:expandedTitleGravity="bottom"
            app:expandedTitleMarginBottom="@dimen/dimen_common_margin_large"
            app:expandedTitleMarginStart="@dimen/dimen_common_margin_large"
            app:expandedTitleTextAppearance="@style/AppBarExpandedTextViewStyleWhite"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:title="@string/string_activity_name_my_cart"
            app:titleEnabled="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/id_app_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_app_bar_height"
                android:theme="@style/AppBarWhite"
                app:popupTheme="@style/AppBarPopWhite"
                app:titleTextAppearance="@style/AppBarTextViewStyleWhite" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/id_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLayoutBackground"
                android:paddingLeft="@dimen/dimen_common_margin"
                android:paddingTop="@dimen/dimen_common_margin_more"
                android:paddingRight="@dimen/dimen_common_margin"
                android:paddingBottom="@dimen/dimen_common_margin"
                android:text="@string/string_label_anything"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/dimen_common_text_size_sub" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/dimen_common_margin_more">

                <EditText
                    android:id="@+id/id_edit_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit_text"
                    android:gravity="start"
                    android:hint="@string/string_edit_hint_anything"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="textCapSentences|textMultiLine"
                    android:minLines="3"
                    android:padding="@dimen/dimen_edit_text_padding_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/dimen_edit_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_view_height"
                android:layout_marginBottom="@dimen/dimen_common_margin_more"
                android:background="@drawable/style_shadow_up" />

            <include layout="@layout/include_vector_spinner" />

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/id_parent_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <include layout="@layout/include_app_bar_shadow_down" />

        <LinearLayout
            android:id="@+id/id_parent_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWarning"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_common_margin"
            android:paddingBottom="@dimen/dimen_common_margin"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dimen_common_margin"
                android:paddingRight="@dimen/dimen_common_margin"
                android:text="@string/string_label_about_delivery_issue"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/dimen_common_text_size_very_small" />

            <TextView
                android:id="@+id/id_text_warning_title"
                style="@style/TextViewStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_common_margin"
                android:paddingTop="@dimen/dimen_common_margin_medium"
                android:paddingRight="@dimen/dimen_common_margin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_common_text_size_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_common_margin"
                android:paddingRight="@dimen/dimen_common_margin"
                android:text="Sorry for the inconvenience, we are working hard for this."
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/dimen_common_text_size_med" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_app_bar_height"
            android:background="@color/colorStyleThreeDark"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_common_margin"
                android:text="Total Payable :"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimen_common_text_size_med_large" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_common_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_common_margin_very_small"
                    android:tint="@color/colorWhite"
                    app:srcCompat="@drawable/icon_vd_rupee" />

                <TextView
                    android:id="@+id/id_text_payment_amount"
                    style="@style/TextViewStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dimen_common_text_size_very_large" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_common_margin"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/id_button_submit"
                    style="?attr/buttonBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_button_height_default"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/dimen_common_margin_more"
                    android:background="@drawable/button_background_positive_white"
                    android:paddingLeft="@dimen/dimen_common_margin_large"
                    android:paddingRight="@dimen/dimen_common_margin_large"
                    android:text="@string/string_button_name_pay"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/id_progress_bar_book"
                    layout="@layout/include_vector_spinner_small" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/include_app_bar_shadow"
        android:visibility="gone" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>