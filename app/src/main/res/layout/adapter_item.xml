<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/more_layouts_click"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="@dimen/dimen_common_margin_less_more">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text_title"
                style="@style/TextViewStyleBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/dimen_common_text_size_med_large" />

            <include layout="@layout/include_add_item" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_common_margin_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:textColor="@color/colorTextPrimaryAlpha"
                android:textSize="@dimen/dimen_common_text_size_title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/id_text_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_common_margin_medium"
                android:layout_marginEnd="@dimen/dimen_common_margin_medium"
                android:text="Beer"
                android:textColor="@color/colorStyleThreeDark"
                android:textSize="@dimen/dimen_common_text_size_title"
                android:visibility="gone" />

            <include
                android:id="@+id/id_image_dot"
                layout="@layout/include_dots"
                android:visibility="gone" />

            <TextView
                android:id="@+id/id_text_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_common_margin_medium"
                android:text="Price:"
                android:textColor="@color/colorTextPrimaryAlpha"
                android:textSize="@dimen/dimen_common_text_size_title" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_image_amount"
                android:layout_width="@dimen/dimen_dots_size"
                android:layout_height="@dimen/dimen_dots_size"
                android:layout_marginStart="@dimen/dimen_common_margin_medium"
                android:tint="@color/colorStyleFour"
                app:srcCompat="@drawable/icon_vd_rupee" />

            <TextView
                android:id="@+id/id_text_amount"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_common_margin_very_small"
                android:textColor="@color/colorStyleFour"
                android:textSize="@dimen/dimen_common_text_size_title" />
        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/id_view"
        layout="@layout/utility_vertical_border_layout" />

</LinearLayout>